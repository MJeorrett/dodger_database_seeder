<form action="/databases/<%= @db_name %>/<%= @table_name %>/seeds" method="post">
  <label for="seed_name">Seed Name:</label>
    <input id="seed_name" type="text" name="seed_name" required />

  <table>
    <thead>
      <tr class="header-row">
        <th>Column Name</th>
        <th>Data File</th>
        <th>Max</th>
        <th>Min</th>
      </tr>
    </thead>
    <tbody>
      <% @target_columns_data.each do |target_column_data| %>
        <% target_column = target_column_data['column_name'] %>
        <tr>
          <td><%= target_column %> :</td>
          <%
          if target_column_data['data_type'] == 'character varying'
            source_file_disabled = ""
          else
            source_file_disabled = "disabled"
          end
          %>
          <td>
            <select name="source_file_<%= target_column %>" <%= source_file_disabled %>>
              <% @file_names.each do |file_name| %>
                <option value="<%= file_name %>"><%= file_name %></option>
              <% end %>
            </select>
          </td>
          <%
          if target_column_data['data_type'] == 'integer'
            number_disabled = ""
          else
            number_disabled = "disabled"
          end
          %>
          <td>
            <input type="number" name="number_max_<%= target_column %>" min="0" step="1" <%= number_disabled %>>
          </td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <input class="button" type="submit" value="Submit" />
</form>
